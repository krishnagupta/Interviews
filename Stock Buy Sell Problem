// For One transaction

let x = [5,2,6,1,4]

let i, maxprofit=0,minsofar=x[0];

for(i=0; i<x.length; i++){
    if(x[i] < minsofar){
      minsofar = x[i];
    }
    if(x[i]-minsofar > maxprofit){
    maxprofit = x[i]-minsofar;
    }
    
}

console.log(maxprofit)


// For multiple transaction

let x = [5,2,6,1,4]

let i, profit=0;

for(i=1; i<x.length; i++){
   if(x[i] > x[i-1]){
     profit += (x[i]-x[i-1])
   }
}

console.log(profit)
